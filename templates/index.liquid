<h2>{{ collections['frontpage'].title }}</h2>
{% for product in collections['frontpage'].products %}
    <a href="{{ product.url }}">
    <img src="{{ product.featured_image | image_url }}" width="200" height="200">
    <h3>{{ product.title }}</h3>
    <p>{{ product.price | money }}</p>
    {% comment %} <div>
        <a href="{{ product.url }}">{{ product.title }}</a>
    </div> {% endcomment %}
    </a>
{% endfor %}
